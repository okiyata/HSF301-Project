<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hsf301.fe.controller.LoginController">
    <center>
        <StackPane prefWidth="400.0">
            <children>
                <AnchorPane prefHeight="400.0" prefWidth="566.0" styleClass="login-pane">
                    <children>
                        <Text fill="#0598ff" layoutX="141.0" layoutY="99.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header-text" text="SWP Mentor Booking System">
                            <font>
                                <Font name="System Bold" size="23.0" />
                            </font>
                        </Text>
                        <TextField fx:id="txtUsername" layoutX="213.0" layoutY="155.0" promptText="Username" styleClass="login-field" />
                        <PasswordField fx:id="txtPassword" layoutX="213.0" layoutY="225.0" promptText="Password" styleClass="login-field" />
                        <Button defaultButton="true" layoutX="176.0" layoutY="307.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="38.0" prefWidth="79.0" styleClass="login-button" text="Login">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Button>
                        <Button cancelButton="true" layoutX="347.0" layoutY="307.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="38.0" prefWidth="79.0" styleClass="login-button" text="Cancel">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
            </children>
        </StackPane>
    </center>
</BorderPane>
